<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.homework.multilayerprog.HelloController">
        <children>
            <HBox prefHeight="400.0" prefWidth="600.0">
                <children>
                    <VBox prefHeight="400.0" prefWidth="339.0">
