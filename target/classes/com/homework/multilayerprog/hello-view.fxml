                            <Button mnemonicParsing="false" onAction="#delbut" text="Delete" />
                            <TextField fx:id="t1" />
                            <TextField fx:id="t2" />
                            <TextField fx:id="t3" />
                            <TextField fx:id="t4" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#save" prefHeight="24.0" prefWidth="50.0" text="Save" />
                                  <Button mnemonicParsing="false" onAction="#addbut" prefHeight="24.0" prefWidth="51.0" text="Add" />
                        <Button fx:id="lbut" mnemonicParsing="false" onAction="#start" text="Load" />
                     </children>
                  </HBox>
                        </children>
                    </VBox>
                </children>
            </HBox>
