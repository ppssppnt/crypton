                                <children>
                                    <TextArea fx:id="searchstr" prefHeight="38.0" prefWidth="250.0" />
                                    <Button mnemonicParsing="false" onAction="#search" text="Search" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <VBox prefHeight="400.0" prefWidth="255.0">
                        <children>
                  <Label text="Name:" />
